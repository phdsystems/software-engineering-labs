        .hero-content {
            max-width: 760px;
            margin: 0 auto;
            text-align: center;
            display: flex;
            flex-direction: column;
            gap: 1.6rem;
        }

        .hero-content h1 {
            font-size: clamp(2.6rem, 4.2vw, 3.7rem);
            line-height: 1.1;
        }

        .hero-content p {
            font-size: 1.2rem;
            opacity: 0.92;
        }

        .formula {
            display: inline-block;
            background: rgba(255,255,255,0.18);
            padding: 1rem 2.4rem;
            border-radius: 999px;
            font-family: 'JetBrains Mono', 'Courier New', monospace;
            font-size: 1rem;
        }

        .cta-buttons {
            display: flex;
            justify-content: center;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .btn {
            padding: 0.75rem 2.3rem;
            border-radius: 999px;
            text-decoration: none;
            transition: transform 0.3s, box-shadow 0.3s;
            font-weight: 600;
        }

        .btn-primary {
            background: white;
            color: var(--primary);
            box-shadow: 0 15px 30px rgba(15, 23, 42, 0.22);
        }

        .btn-secondary {
            background: transparent;
            color: white;
            border: 2px solid rgba(255,255,255,0.7);
        }

        .btn:hover,
        .btn:focus {
            transform: translateY(-2px);
            box-shadow: 0 18px 36px rgba(15, 23, 42, 0.28);
        }

        h2.page-title {
            font-size: 2.3rem;
            margin-bottom: 2rem;
        }

        .two-column {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 2rem;
        }

        .callout {
            background: var(--light);
            border-radius: 16px;
            padding: 1.7rem;
            border: 1px solid rgba(148, 163, 184, 0.32);
        }

        ul.list {
            padding-left: 1.3rem;
            display: grid;
            gap: 0.75rem;
            color: #475569;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
        }

        .feature-card {
            background: white;
            border-radius: 18px;
            padding: 1.8rem;
            box-shadow: 0 20px 40px rgba(15, 23, 42, 0.1);
            border: 1px solid rgba(226, 232, 240, 0.9);
            height: 100%;
        }

        .feature-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            background: var(--gradient);
            color: white;
            display: grid;
            place-items: center;
            font-size: 1.4rem;
            margin-bottom: 1rem;
        }

        .flow-diagram {
            background: var(--light);
            border-radius: 18px;
            padding: 2rem;
            font-family: 'JetBrains Mono', monospace;
            border: 1px solid rgba(148, 163, 184, 0.3);
            text-align: center;
            overflow-x: auto;
        }

        .flow-step {
            display: inline-block;
            padding: 0.55rem 1.15rem;
            background: white;
            border: 2px solid var(--primary);
            border-radius: 10px;
            margin: 0.55rem;
        }

        .arrow {
            margin: 0 1rem;
            color: var(--primary);
            font-weight: 600;
        }

        .metrics-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
            gap: 1.5rem;
        }

        .metric {
            background: rgba(15, 23, 42, 0.9);
            color: white;
            border-radius: 16px;
            padding: 1.8rem;
            text-align: center;
            border: 1px solid rgba(255, 255, 255, 0.12);
        }

        .metric-value {
            font-size: 2.2rem;
            font-weight: 700;
            background: var(--gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .metric-label {
            margin-top: 0.4rem;
            font-size: 0.85rem;
            letter-spacing: 0.12em;
            opacity: 0.8;
        }

        .use-case-tabs {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .tab {
            padding: 0.55rem 1.6rem;
            border-radius: 999px;
            border: 2px solid var(--primary);
            background: transparent;
            color: var(--primary);
            cursor: pointer;
            transition: all 0.3s;
            font-weight: 600;
        }

        .tab.active,
        .tab:hover {
            background: var(--primary);
            color: white;
        }

        .use-case-content {
            background: var(--light);
            border-radius: 18px;
            border: 1px solid rgba(148, 163, 184, 0.3);
            padding: 2rem;
        }

        .code-block {
            background: #0f172a;
            color: #22d3ee;
            font-family: 'JetBrains Mono', monospace;
