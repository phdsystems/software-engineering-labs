            border-radius: 12px;
            margin: 1.5rem 0;
            white-space: pre-wrap;
            overflow-x: auto;
        }

        .cta-section {
            background: var(--gradient);
            color: white;
            padding: 3rem;
            border-radius: 20px;
            text-align: center;
            box-shadow: 0 28px 60px rgba(37, 99, 235, 0.35);
        }

        .references-list {
            list-style: decimal;
            padding-left: 1.4rem;
            display: grid;
            gap: 0.9rem;
            color: #334155;
        }

        footer {
            margin-top: 2rem;
            text-align: center;
            color: #475569;
        }

        footer ul {
            list-style: none;
            display: flex;
            justify-content: center;
            gap: 1.4rem;
            flex-wrap: wrap;
            margin-bottom: 1rem;
        }

        footer ul a {
            text-decoration: none;
            color: inherit;
            opacity: 0.75;
        }

        footer ul a:hover,
        footer ul a:focus {
            opacity: 1;
        }

        .page.flip-in-forward { animation: flipInForward 0.8s ease forwards; }
        .page.flip-out-forward { animation: flipOutForward 0.8s ease forwards; }
        .page.flip-in-back { animation: flipInBack 0.8s ease forwards; }
        .page.flip-out-back { animation: flipOutBack 0.8s ease forwards; }

        @keyframes flipInForward {
            from { transform: rotateY(90deg); opacity: 0; }
            to { transform: rotateY(0deg); opacity: 1; }
        }

        @keyframes flipOutForward {
            from { transform: rotateY(0deg); opacity: 1; }
            to { transform: rotateY(-90deg); opacity: 0; }
        }

        @keyframes flipInBack {
            from { transform: rotateY(-90deg); opacity: 0; }
            to { transform: rotateY(0deg); opacity: 1; }
        }

        @keyframes flipOutBack {
            from { transform: rotateY(0deg); opacity: 1; }
            to { transform: rotateY(90deg); opacity: 0; }
        }

        .book-navigation {
            position: fixed;
            bottom: 26px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 0.95rem 1.6rem;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(18px);
            border-radius: 999px;
            box-shadow: 0 24px 48px rgba(15, 23, 42, 0.26);
            z-index: 950;
        }

        .nav-button {
            width: 44px;
            height: 44px;
            border-radius: 50%;
            border: none;
            background: var(--primary);
            color: white;
            display: grid;
            place-items: center;
            font-size: 1.2rem;
            cursor: pointer;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .nav-button:disabled {
            background: rgba(148, 163, 184, 0.45);
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }

        .nav-button:not(:disabled):hover,
        .nav-button:not(:disabled):focus {
            transform: translateY(-2px);
            box-shadow: 0 14px 30px rgba(37, 99, 235, 0.35);
        }

        .page-indicator {
            font-weight: 600;
            color: var(--dark);
        }

        .page-dots {
            display: flex;
            gap: 0.45rem;
        }

        .dot {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background: rgba(37, 99, 235, 0.3);
            border: none;
            cursor: pointer;
            transition: transform 0.3s, background 0.3s;
        }

        .dot.active {
            background: var(--primary);
            transform: scale(1.2);
        }

        @media (max-width: 1024px) {
            body {
                overflow: auto;
                height: auto;
            }

            header {
                position: relative;
            }

            .layout {
                flex-direction: column;
            }

            .nav-actions {
                flex-wrap: wrap;
                justify-content: center;
            }

            .book-shell {
                margin-top: 0;
                padding: 0;
            }

            .book-pages {
                height: auto;
                perspective: none;
            }

            .page {
                position: static;
                transform: none !important;
                opacity: 1 !important;
                pointer-events: auto;
                border-radius: 0;
                box-shadow: none;
                margin-bottom: 2rem;
            }

            .page::after,
            .page::before {
                display: none;
            }

            .page-inner {
                padding: 3rem 1.6rem;
            }

            .book-navigation {
                display: none;
            }
        }

        @media (max-width: 640px) {
            .hero-content h1 { font-size: 2.35rem; }
            .page-inner { padding: 2.6rem 1.4rem; }
            .cta-buttons { flex-direction: column; }
        }

        @media (prefers-reduced-motion: reduce) {
            body {
                overflow: auto;
                height: auto;
            }

            .book-navigation {
                display: none;
            }

            .page {
                transform: none !important;
                animation: none !important;
            }
        }
    </style>
