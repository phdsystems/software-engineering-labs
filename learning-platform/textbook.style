        .book-pages {
            position: relative;
            width: 100%;
            max-width: 1160px;
            height: calc(100vh - 240px);
            perspective: 2200px;
        }

        .page {
            position: absolute;
            inset: 0;
            background: white;
            border-radius: 22px;
            box-shadow: 0 30px 90px rgba(15, 23, 42, 0.24);
            display: flex;
            flex-direction: column;
            overflow: hidden;
            transform-origin: left center;
            transform: rotateY(-90deg);
            opacity: 0;
            pointer-events: none;
            backface-visibility: hidden;
        }

        .page::before {
            content: '';
            position: absolute;
            inset: 0;
            border-radius: inherit;
            pointer-events: none;
            box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.12);
        }

        .page::after {
            content: attr(data-page-label);
            position: absolute;
            bottom: 1.3rem;
            right: 2rem;
            font-size: 0.8rem;
            letter-spacing: 0.1em;
            color: rgba(30, 41, 59, 0.6);
        }

        .page.is-active {
            opacity: 1;
            pointer-events: auto;
            transform: rotateY(0);
            z-index: 3;
        }

        .page.hero {
            background: linear-gradient(135deg, rgba(37, 99, 235, 0.95), rgba(124, 58, 237, 0.9));
            color: white;
            box-shadow: 0 40px 110px rgba(37, 99, 235, 0.38);
        }

        .page.hero::after {
            color: rgba(255,255,255,0.7);
        }

        .page-inner {
            flex: 1;
            overflow-y: auto;
            padding: 3.2rem 3.6rem;
            position: relative;
            z-index: 1;
        }

        .page-inner::before,
        .page-inner::after {
            content: '';
            position: absolute;
            inset: 0;
            z-index: -1;
            pointer-events: none;
        }

        .page-inner::-webkit-scrollbar { width: 8px; }
        .page-inner::-webkit-scrollbar-thumb {
            background: rgba(148, 163, 184, 0.55);
            border-radius: 999px;
        }

        .page.theme-cover .page-inner::before {
            background: radial-gradient(circle at 15% 20%, rgba(255, 255, 255, 0.25), transparent 55%), radial-gradient(circle at 85% 80%, rgba(14, 165, 233, 0.35), transparent 60%);
        }

        .page.theme-abstract .page-inner::before {
            background: radial-gradient(circle at 80% 20%, rgba(59, 130, 246, 0.2), transparent 65%), radial-gradient(circle at 15% 85%, rgba(125, 211, 252, 0.2), transparent 60%);
        }

        .page.theme-strategy .page-inner::before {
            background: radial-gradient(circle at 18% 24%, rgba(96, 165, 250, 0.18), transparent 60%), radial-gradient(circle at 82% 78%, rgba(129, 140, 248, 0.18), transparent 65%);
        }

        .page.theme-delivery .page-inner::before {
            background: radial-gradient(circle at 20% 25%, rgba(34, 211, 238, 0.18), transparent 60%), radial-gradient(circle at 80% 80%, rgba(45, 212, 191, 0.18), transparent 65%);
        }

        .page.theme-features .page-inner::before {
            background: radial-gradient(circle at 82% 20%, rgba(249, 115, 22, 0.14), transparent 65%), radial-gradient(circle at 20% 75%, rgba(250, 204, 21, 0.14), transparent 60%);
        }

        .page.theme-architecture .page-inner::before {
            background: radial-gradient(circle at 18% 50%, rgba(165, 180, 252, 0.2), transparent 60%), radial-gradient(circle at 85% 48%, rgba(96, 165, 250, 0.18), transparent 65%);
        }

        .page.theme-operations .page-inner::before {
            background: radial-gradient(circle at 25% 25%, rgba(148, 163, 184, 0.18), transparent 60%), radial-gradient(circle at 78% 78%, rgba(224, 231, 255, 0.12), transparent 65%);
        }

        .page.theme-usecases .page-inner::before {
            background: radial-gradient(circle at 20% 25%, rgba(52, 211, 153, 0.16), transparent 60%), radial-gradient(circle at 82% 70%, rgba(14, 165, 233, 0.16), transparent 65%);
        }

        .page.theme-playbook .page-inner::before {
            background: radial-gradient(circle at 15% 75%, rgba(56, 189, 248, 0.18), transparent 60%), radial-gradient(circle at 80% 25%, rgba(110, 231, 183, 0.16), transparent 65%);
        }

        .page.theme-references .page-inner::before {
            background: radial-gradient(circle at 20% 30%, rgba(125, 211, 252, 0.18), transparent 60%), radial-gradient(circle at 82% 70%, rgba(165, 180, 252, 0.18), transparent 65%);
        }

