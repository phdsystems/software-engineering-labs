    <script>
        const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
        const stackedQuery = window.matchMedia('(max-width: 1024px)');
        const pages = Array.from(document.querySelectorAll('.page'));
        const bookNavigation = document.querySelector('.book-navigation');
        const prevButton = document.querySelector('.nav-button.prev');
        const nextButton = document.querySelector('.nav-button.next');
        const pageIndicator = document.querySelector('.page-indicator .current');
        const totalIndicator = document.querySelector('.page-indicator .total');
        const navLinks = Array.from(document.querySelectorAll('.nav-links a'));
        const tocLinks = Array.from(document.querySelectorAll('.toc-item a'));
        const dotsContainer = document.querySelector('.page-dots');

        totalIndicator.textContent = pages.length;

        const pageIndexById = new Map();
        pages.forEach((page, index) => {
            pageIndexById.set(page.id, index);
            page.dataset.pageLabel = `Page ${index + 1} / ${pages.length}`;
        });

        function buildDots() {
            dotsContainer.innerHTML = '';
            pages.forEach((page, index) => {
                const dot = document.createElement('button');
                dot.className = 'dot' + (index === 0 ? ' active' : '');
                dot.type = 'button';
                dot.setAttribute('aria-label', `Go to ${page.dataset.title || page.id}`);
                dot.dataset.target = page.id;
                dotsContainer.appendChild(dot);
            });
        }

        let pagingEnabled = !prefersReducedMotion && !stackedQuery.matches;

        if (pagingEnabled) {
            buildDots();
        } else {
            bookNavigation.style.display = 'none';
        }

        let activeIndex = 0;
        pages[activeIndex].classList.add('is-active');
        pageIndicator.textContent = activeIndex + 1;

        function setPageLabel(page, index) {
            page.dataset.pageLabel = `Page ${index + 1} / ${pages.length}`;
        }

        function updateNavigation() {
            if (!pagingEnabled) {
                pages.forEach((page) => {
                    page.removeAttribute('aria-hidden');
                    page.classList.add('is-active');
                    page.style.transform = '';
                    page.style.transformOrigin = '';
                });
                return;
            }

            pages.forEach((page, index) => setPageLabel(page, index));
            pageIndicator.textContent = activeIndex + 1;
            prevButton.disabled = activeIndex === 0;
            nextButton.disabled = activeIndex === pages.length - 1;

            const dots = Array.from(document.querySelectorAll('.dot'));
            dots.forEach((dot) => {
                dot.classList.toggle('active', pageIndexById.get(dot.dataset.target) === activeIndex);
            });

            const tocItems = Array.from(document.querySelectorAll('.toc-item'));
            tocItems.forEach((item) => {
                const link = item.querySelector('a');
                const targetId = link?.getAttribute('href')?.substring(1);
                const targetIndex = targetId ? pageIndexById.get(targetId) : undefined;
                item.classList.toggle('active', typeof targetIndex === 'number' && targetIndex === activeIndex);
            });

            pages.forEach((page, index) => {
                const isActive = index === activeIndex;
                page.setAttribute('aria-hidden', String(!isActive));
                if (!isActive) {
                    page.style.transform = '';
                    page.style.transformOrigin = '';
                }
            });
        }

        function animateTransition(nextIndex) {
            if (!pagingEnabled) {
                return;
            }
            if (nextIndex === activeIndex) {
                return;
            }

            const direction = nextIndex > activeIndex ? 'forward' : 'back';
            const currentPage = pages[activeIndex];
            const nextPage = pages[nextIndex];

            currentPage.classList.remove('flip-in-forward', 'flip-in-back');
            nextPage.classList.remove('flip-out-forward', 'flip-out-back');

            const exitClass = direction === 'forward' ? 'flip-out-forward' : 'flip-out-back';
            const enterClass = direction === 'forward' ? 'flip-in-forward' : 'flip-in-back';

            if (direction === 'forward') {
                currentPage.style.transformOrigin = 'left center';
                nextPage.style.transformOrigin = 'right center';
                nextPage.style.transform = 'rotateY(90deg)';
            } else {
                currentPage.style.transformOrigin = 'right center';
                nextPage.style.transformOrigin = 'left center';
                nextPage.style.transform = 'rotateY(-90deg)';
            }

            nextPage.classList.add('is-active', enterClass);
            nextPage.setAttribute('aria-hidden', 'false');
            nextPage.addEventListener('animationend', () => {
                nextPage.classList.remove(enterClass);
                nextPage.style.transform = '';
                nextPage.style.transformOrigin = '';
            }, { once: true });

            currentPage.classList.add(exitClass);
            currentPage.addEventListener('animationend', () => {
                currentPage.classList.remove(exitClass, 'is-active');
                currentPage.setAttribute('aria-hidden', 'true');
                currentPage.style.transform = '';
                currentPage.style.transformOrigin = '';
            }, { once: true });

            activeIndex = nextIndex;
            updateNavigation();
        }

        prevButton.addEventListener('click', () => {
            animateTransition(Math.max(0, activeIndex - 1));
        });

        nextButton.addEventListener('click', () => {
            animateTransition(Math.min(pages.length - 1, activeIndex + 1));
        });

        dotsContainer.addEventListener('click', (event) => {
            if (!(event.target instanceof HTMLButtonElement) || !pagingEnabled) {
                return;
            }
            const targetId = event.target.dataset.target;
            const targetIndex = pageIndexById.get(targetId);
            if (typeof targetIndex === 'number') {
                animateTransition(targetIndex);
            }
        });

        document.addEventListener('keydown', (event) => {
            if (!pagingEnabled) {
                return;
            }
            if (event.key === 'ArrowRight') {
                animateTransition(Math.min(pages.length - 1, activeIndex + 1));
            }
            if (event.key === 'ArrowLeft') {
                animateTransition(Math.max(0, activeIndex - 1));
            }
        });

        function handleAnchorNavigation(event, link) {
            const hash = link.getAttribute('href');
            if (!hash || !hash.startsWith('#')) {
                return;
            }
            const targetId = hash.substring(1);
            const targetIndex = pageIndexById.get(targetId);

            if (typeof targetIndex === 'number') {
                if (pagingEnabled) {
                    event.preventDefault();
                    animateTransition(targetIndex);
                } else {
                    activeIndex = targetIndex;
                    updateNavigation();
                }
            }
        }

        navLinks.forEach((link) => {
            link.addEventListener('click', (event) => handleAnchorNavigation(event, link));
        });

        tocLinks.forEach((link) => {
            link.addEventListener('click', (event) => handleAnchorNavigation(event, link));
        });

        stackedQuery.addEventListener('change', (event) => {
            const shouldEnable = !prefersReducedMotion && !event.matches;

            if (shouldEnable && !pagingEnabled) {
                pagingEnabled = true;
                bookNavigation.style.display = '';
                buildDots();
                pages.forEach((page, index) => {
                    page.classList.toggle('is-active', index === activeIndex);
                    page.setAttribute('aria-hidden', index === activeIndex ? 'false' : 'true');
                    page.style.transform = '';
                    page.style.transformOrigin = '';
                });
                updateNavigation();
            }

            if (!shouldEnable && pagingEnabled) {
                pagingEnabled = false;
                bookNavigation.style.display = 'none';
                pages.forEach((page) => {
                    page.classList.add('is-active');
                    page.removeAttribute('aria-hidden');
                    page.classList.remove('flip-in-forward', 'flip-in-back', 'flip-out-forward', 'flip-out-back');
                    page.style.transform = '';
                    page.style.transformOrigin = '';
                });
            }
        });

        document.querySelectorAll('.tab').forEach(tab => {
            tab.addEventListener('click', function() {
                document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                this.classList.add('active');

                const content = document.querySelector('.use-case-content');
                const tabText = this.textContent;

                const useCases = {
                    'Product Owners': {
                        title: 'For Product Owners',
                        description: 'Capture requirements and approve artefacts in one loop:',
                        code: `# Describe your initiative\noh plan --prompt "Launch a growth experiment with feature flags and analytics instrumentation"\n\n# omniFlow delivers\n‚Üí Business Requirements Document\n‚Üí Success metrics & KPIs\n‚Üí Recommended toolset & budget\n‚Üí Implementation manifest`,
                        details: 'Stakeholders iterate on generated artefacts, add comments, and sign off within minutes.'
                    },
                    'Developers': {
                        title: 'For Developers',
                        description: 'Provision scaffolded repositories with tests and infrastructure:',
                        code: `# Create runtime project\noh compile --in manifest/last.json --target airflow\n\n# Fill in domain logic\n$EDITOR dags/customer_onboarding.py\n\n# Validate and ship\npytest && poetry run deploy`,
                        details: 'Skip boilerplate and focus on domain code. omniFlow keeps docs and manifests in sync with Git.'
                    },
                    'DevOps': {
