            .toc-item a::before {
                content: '';
                position: absolute;
                left: 0;
                top: 50%;
                transform: translateY(-50%);
                width: 8px;
                height: 8px;
                border-radius: 50%;
                border: 2px solid var(--primary);
                background: transparent;
                transition: background 0.3s, transform 0.3s;
            }

            .toc-item.active a,
            .toc-item a:hover,
            .toc-item a:focus {
                color: var(--primary);
            }

            .toc-item.active a {
                background: rgba(37, 99, 235, 0.12);
            }

